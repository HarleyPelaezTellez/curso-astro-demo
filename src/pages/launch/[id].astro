---
import { getLaunchBy } from "../../services/spacex";
import Layout from "../../layouts/Layout.astro";
import { videos } from "../../type/videos.json";

const videosprop = videos;

export const prerender = false;

const { id } = Astro.params;

let launch;

if (id) {
  launch = await getLaunchBy({ id });
}
---

<Layout title=`Lanzamiento ${id}`>
  <article
    class="rounded-lg border shadow-md bg-gray-800 border-gray-700 transition flex flex-col text-center"
  >
    <picture class="flex justify-center p-4">
      <img
        class="mb-5 rounded-lg"
        src={launch?.links?.patch.small}
        alt={launch?.name}
      />
    </picture>
    <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
      Launch #{launch?.flight_number}
    </h2>
    <p class="mb-4 font-light text-gray-400">{launch?.details}</p>
    <p class="mb-4 font-light text-gray-400">
      <a
        href={launch?.links.webcast}
        target="_blank"
        class="flex m-auto text-center hover:border-gray-500 border-gray-700 rounded-lg p-2 hover:text-gray-950"
      >
        <svg
          class="hover:fill-red-500 fill-red-700 w-"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          style="width: 50px; height: auto; margin: auto;"
          ><path
            d="M21.593 7.203a2.506 2.506 0 0 0-1.762-1.766C18.265 5.007 12 5 12 5s-6.264-.007-7.831.404a2.56 2.56 0 0 0-1.766 1.778c-.413 1.566-.417 4.814-.417 4.814s-.004 3.264.406 4.814c.23.857.905 1.534 1.763 1.765 1.582.43 7.83.437 7.83.437s6.265.007 7.831-.403a2.515 2.515 0 0 0 1.767-1.763c.414-1.565.417-4.812.417-4.812s.02-3.265-.407-4.831zM9.996 15.005l.005-6 5.207 3.005-5.212 2.995z"
          ></path></svg
        >
      </a>
    </p>
  </article>
</Layout>
